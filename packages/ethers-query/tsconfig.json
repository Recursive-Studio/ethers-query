{
    "compilerOptions": {
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ES2021",
        "jsx": "react-jsx",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "verbatimModuleSyntax": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}
